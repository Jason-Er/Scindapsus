<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <TextView
        android:id="@+id/login_userNameLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="LogIn"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/userNameLbl"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_userNameLbl"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:text="Username: "
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/login_userNameLbl" />

    <EditText
        android:id="@+id/login_userName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameLbl"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/login_password"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/pwdLbl"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_userName"
        android:text="Password: "
        android:textSize="30sp"
        android:visibility="visible"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toBottomOf="@+id/userNameLbl"
        app:layout_constraintLeft_toLeftOf="@+id/userNameLbl" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pwdLbl"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/pwdLbl"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/pwdLbl" />

    <Button
        android:id="@+id/login_logUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Log Up"
        android:visibility="visible"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="106dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="36dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="158dp"
        app:layout_constraintBottom_toBottomOf="@+id/userNameLbl"
        android:layout_marginEnd="158dp"
        app:layout_constraintRight_toRightOf="@+id/login_userName"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/userNameLbl">

    </LinearLayout>

    <Button
        android:id="@+id/login_logIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:text="Log In"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/login_logUp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/login_logUp"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>
